<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{%-5level}[%style{%t}{bright,blue}] %style{%C}{bright,yellow}: %m%n"/>
        </Console>
        <http name="http" url="http://localhost:5080/api/default/default/_json">
            <Property name="Authorization" value="Basic cm9vdEBleGFtcGxlLmNvbTpRWmRGSWpjcGlMNWZIT3ho" /><!-- openobserve参照して要書きかえ -->
            <JsonTemplateLayout eventTemplateUri="classpath:EcsLayoutCustom.json"/>
        </http>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="http" />
        </Root>
    </Loggers>
</configuration>